<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.bollyfilmes.view.fragments.questions.QuestionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="0dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_launcher" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:textSize="18dp"
            android:layout_weight="3"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorAccent"
            tools:text="Carga de bateria" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_arrow_donw"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            app:srcCompat="@mipmap/ic_arrow_down" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_arrow_up"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            app:srcCompat="@mipmap/ic_arrow_up"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        tools:visibility="visible">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#bfbfbf"
            android:text="@string/text_carga_bateria" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#bfbfbf"
            tools:text="Status de Troca: CONFIRMADO" />



    </LinearLayout>


</LinearLayout>
